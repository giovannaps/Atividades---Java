import java.util.Scanner;


public class Main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        System.out.print("Digite um número: ");
        int num1 = s.nextInt ();
        System.out.println();
        System.out.print("Digite mais um número: ");
        s = new Scanner(System.in);
        int num2 = s.nextInt ();
        System.out.println();
        System.out.print ("A soma desses dois números é igual a: ");
        System.out.print (num1 + num2);
        System.out.println();
        System.out.print ("A subtração desses dois números é igual a: ");
        System.out.print (num1 - num2);
        System.out.println();
        System.out.print ("A multiplicação desses dois números é igual a: ");
        System.out.print (num1 * num2);
        System.out.println();
        if (num2 != 0) {
            System.out.print("A divisão desses dois números é igual a: ");
            System.out.print(num1 / num2);
        } else {
            System.out.println();
                System.out.print("O denominador não pode ser zero.");
            }
        s.close();
        }


    }
